html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")
        title MySQL
    body
    h1(class="text-center py-5") Home Page
    section(class="main d-flex justify-content-center")
        div(class="login me-5 border border-success p-5 rounded-3")
            h3 Sign in
            form(action="/login", method="post")
                p Enter your email:
                input(type="email", name="email", placeholder="Enter your email")
                br
                br
                p Enter your password:
                input(type="password", name="password", placeholder="Enter your password", minlength="6")
                br
                br
                button(type="submit", class="btn btn-outline-success") Sign in
            if signinMessage
                p.text-danger #{signinMessage}
        br
        br
        div(class="register border border-primary p-5 rounded-3")
            h3 Sign up
            form(action="/register", method="post")
                p Enter your email:
                input(type="email", name="email", placeholder="Enter your email")
                br
                br
                p Enter your password:
                input(type="password", name="password", placeholder="at least 6 words", minlength="6")
                br
                br
                button(type="submit", class="btn btn-outline-primary") Sign up
            if signupMessage
                p.text-danger #{signupMessage}
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous")